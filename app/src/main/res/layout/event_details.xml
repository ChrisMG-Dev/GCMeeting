<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.guide.cordobatourplus.EventDetails">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cView"
        android:layout_below="@+id/tvLastNews"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        android:layout_margin="10dp"
        cardElevation="4dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ivDate"
                android:src="@drawable/ic_calendar_green"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Date"
                android:id="@+id/tvDate"
                android:textColor="#333333"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="6dp"
                android:layout_alignTop="@+id/ivDate"
                android:layout_toRightOf="@+id/ivDate"
                android:layout_toEndOf="@+id/ivDate" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Time"
                android:id="@+id/tvTime"
                android:textColor="#333333"
                android:layout_alignTop="@+id/tvDate"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_clock_green"
                android:id="@+id/imageView2"
                android:layout_marginTop="3dp"
                android:layout_alignTop="@+id/ivDate"
                android:layout_toLeftOf="@+id/tvTime"
                android:layout_toStartOf="@+id/tvTime" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ivPlace"
                android:src="@drawable/ic_location_green"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/ivDate"
                android:layout_alignLeft="@+id/ivDate"
                android:layout_alignStart="@+id/ivDate" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Place"
                android:id="@+id/tvPlace"
                android:textColor="#333333"
                android:layout_alignTop="@+id/ivPlace"
                android:layout_alignLeft="@+id/tvDate"
                android:layout_alignStart="@+id/tvDate" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Activities"
                android:id="@+id/tvLabelActivities"
                android:textColor="#333333"
                android:layout_below="@+id/tvPlace"
                android:layout_marginTop="20dp"
                android:layout_alignLeft="@+id/ivPlace"
                android:layout_alignStart="@+id/ivPlace" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/tvActivities"
                android:textColor="#333333"
                android:layout_below="@+id/tvLabelActivities"
                android:layout_alignLeft="@+id/tvLabelActivities"
                android:layout_alignStart="@+id/tvLabelActivities"
                android:layout_marginTop="23dp"
                android:layout_alignRight="@+id/tvTime"
                android:layout_alignEnd="@+id/tvTime" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vote"
                android:id="@+id/btnVote"
                android:layout_below="@+id/tvActivities"
                android:layout_centerHorizontal="true" />

            <!--
            <android.support.v7.widget.RecyclerView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_below="@+id/imageView2"
                android:background="#eeeeee"
                android:layout_margin="10dp">

            </android.support.v7.widget.RecyclerView>
            -->

        </RelativeLayout>
        </android.support.v7.widget.CardView>

</ScrollView>
